<div class="flex pt-5 pb-3 justify-center">
  <div class="flex-auto mt-10 w-72">
    <p class="text-4xl pb-2 font-medium text-stone-800">Projects</p>
    <p class="font-light text-stone-700"></p>
  </div>
</div>
<div class="flex flex-col">
  <% data.projects.each do |project| %>
  <div class="flex mb-4 rounded-lg hover:transform hover:scale-105 transition duration-300 ease-in-out relative">
    <div class="absolute bg-stone-800 bg-opacity-20 inset-0 backdrop-filter backdrop-blur-lg transition duration-300 ease-in-out rounded-md"></div>
    <div class="relative z-10 flex-auto p-4 w-2/3 text-stone-900">
      <div class="mb-1 text-xl text-stone-100 font-semibold"><%= project.name %></div>
        <div class="text-stone-100"><%= project.skills %></div>
        <div class="text-stone-100"><%= project.subheading %></div>
        <div class="text-stone-100"><%= project.description %></div>
    </div>
    <div class="flex-auto p-4 w-1/3 relative z-10">
      <%= image_tag project.image, class: 'rounded-lg' %>
    </div>
  </div>
  <% end %>
</div>


<div class="mt-5">
  <p class="mb-2 text-2xl">Other Projects</p>
  <div class="cards">
    <% data.subprojects.each do |project| %>
      <div class="card-product">
        <%= image_tag project.image, alt: "project image" %>
        <div class="card-product-infos w-100">
          <div class="d-flex justify-content-between align-items-center">
            <h2><%= project.name %></h2>
            <% link_to project.url, class: 'external-link', target: '_blank' do %>
              <i class="fas fa-external-link-alt"></i>
            <% end %>
          </div>
          <p><%= project.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
